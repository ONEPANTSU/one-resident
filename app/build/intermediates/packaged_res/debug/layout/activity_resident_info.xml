<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".residents.ResidentInfoActivity">

    <RelativeLayout
        android:layout_height="75dp"
        android:layout_width="match_parent"
        tools:ignore="MissingConstraints"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backButtonFromResidentActivity"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#fafafa"
            android:onClick="goBack"
            app:srcCompat="@drawable/arrow2" />



        <ImageButton
            android:id="@+id/buttonAdd"
            android:onClick="changeResident"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#fafafa"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/edit"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>
    <ScrollView
        android:layout_marginTop="70dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_height="match_parent"
            android:layout_width="match_parent"
            tools:ignore="MissingConstraints"
            android:orientation="vertical">
            <!-- header_ADDRESS-->
            <TextView
                android:id="@+id/textViewAddressHeader"
                style="@style/header_section"
                android:text="Адрес обьекта" />
            <!-- CITY-->
            <TextView
                android:id="@+id/textViewCity"
                style="@style/text_headerField_RS_info"
                android:text="Город" />
            <TextView
                android:id="@+id/textCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                style="@style/text_field_RS_info" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/defolt"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>
            <!-- STREET-->

            <TextView
                android:id="@+id/textViewStreet"
                style="@style/text_headerField_RS_info"
                android:text="Улица" />
            <TextView
                android:id="@+id/textStreet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                style="@style/text_field_RS_info"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/defolt"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>
            <!-- HOUSE-->

            <TextView
                android:id="@+id/textViewHouse"
                style="@style/text_headerField_RS_info"
                android:text="Дом" />
            <TextView
                android:id="@+id/textHouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                style="@style/text_field_RS_info"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/defolt"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>
            <!-- LEVEL-->

            <TextView
                android:id="@+id/textViewLevel"
                style="@style/text_headerField_RS_info"
                android:text="Этаж" />
            <TextView
                android:id="@+id/textLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                style="@style/text_field_RS_info"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/defolt"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>
            <!-- FLAT-->

            <TextView
                android:id="@+id/textViewFlat"
                style="@style/text_headerField_RS_info"
                android:text="Квартира" />
            <TextView
                android:id="@+id/textFlat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                style="@style/text_field_RS_info"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/defolt"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>
            <!-- header_personalData-->
            <TextView
                android:id="@+id/textViewResidentHeader"
                style="@style/header_section"
                android:text="Данные арендатора" />
            <!-- SURNAME-->

            <TextView
                android:id="@+id/textViewSurname"
                style="@style/text_headerField_RS_info"
                android:text="Фамилия" />
            <TextView
                android:id="@+id/textSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                style="@style/text_field_RS_info"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/defolt"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>
            <!-- NAME-->

            <TextView
                android:id="@+id/textViewName"
                style="@style/text_headerField_RS_info"
                android:text="Имя" />
            <TextView
                android:id="@+id/textName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                style="@style/text_field_RS_info"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/defolt"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>
            <!-- SECONDNAME-->

            <TextView
                android:id="@+id/textViewSecondName"
                style="@style/text_headerField_RS_info"
                android:text="Отчество"/>
            <TextView
                android:id="@+id/textSecondName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                style="@style/text_field_RS_info"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/defolt"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>
            <!-- PHONE-->
            <TextView
                android:id="@+id/textViewPhone"
                style="@style/text_headerField_RS_info"
                android:text="Номер телефона" />
            <TextView
                android:id="@+id/textPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                style="@style/text_field_RS_info"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/defolt"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>

            <!-- header_RentalData-->
            <TextView
                android:id="@+id/textViewRentHeader"
                style="@style/header_section"
                android:text="Данные об аренде" />
            <!-- DATE-->

            <TextView
                android:id="@+id/textViewDate"
                style="@style/text_headerField_RS_info"
                android:text="Дата следующего платежа" />
            <TextView
                android:id="@+id/textDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                style="@style/text_field_RS_info"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/defolt"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>
            <!-- PERIOD-->

            <TextView
                android:id="@+id/textViewPeriod"
                style="@style/text_headerField_RS_info"
                android:text="Период внесения арендной платы" />
            <TextView
                android:id="@+id/textPeriod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                style="@style/text_field_RS_info"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/defolt"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>
            <!-- PRICE-->
            <TextView
                android:id="@+id/textViewPrice"
                style="@style/text_headerField_RS_info"
                android:text="Стоимость арендной платы" />
            <TextView
                android:id="@+id/textPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                style="@style/text_field_RS_info"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/defolt"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>
            <!-- COMMENT-->
            <TextView
                android:id="@+id/textViewComment"
                style="@style/text_headerField_RS_info"
                android:text="Комментарий" />
            <TextView
                android:id="@+id/textComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                style="@style/text_field_RS_info"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/defolt"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>