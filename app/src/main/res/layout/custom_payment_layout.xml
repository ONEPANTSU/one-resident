<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:ignore="MissingConstraints">


        <Button
            android:id="@+id/paymentInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_text"

            android:backgroundTint="#e8e9ed"
            android:clickable="false"


            android:paddingStart="60dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:shadowColor="@color/black"
            android:text="Some text"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="HardcodedText,MissingConstraints,RtlSymmetry" />


        <Button
            android:id="@+id/changeDateButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignStart="@id/paymentInfo"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/clock"
            android:clickable="false"
            tools:ignore="ContentDescription,MissingConstraints" />

        <Button
            android:id="@+id/toPayButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/paymentInfo"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#fbf9fa "

            tools:ignore="MissingConstraints,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>